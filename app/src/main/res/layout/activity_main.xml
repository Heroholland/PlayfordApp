<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/Background"
            android:layout_width="879dp"
            android:layout_height="477dp"
            android:background="#81DAC3"
            tools:layout_editor_absoluteX="39dp"
            tools:layout_editor_absoluteY="24dp" />

        <View
            android:id="@+id/viewP1"
            android:layout_width="375dp"
            android:layout_height="129dp"
            android:background="#60A5D5"
            tools:layout_editor_absoluteX="64dp"
            tools:layout_editor_absoluteY="172dp" />

        <View
            android:id="@+id/viewP4"
            android:layout_width="375dp"
            android:layout_height="129dp"
            android:background="#60A5D5"
            tools:layout_editor_absoluteX="489dp"
            tools:layout_editor_absoluteY="330dp" />

        <View
            android:id="@+id/viewP3"
            android:layout_width="375dp"
            android:layout_height="129dp"
            android:background="#60A5D5"
            tools:layout_editor_absoluteX="64dp"
            tools:layout_editor_absoluteY="330dp" />

        <View
            android:id="@+id/viewP2"
            android:layout_width="375dp"
            android:layout_height="129dp"
            android:background="#60A5D5"
            tools:layout_editor_absoluteX="489dp"
            tools:layout_editor_absoluteY="172dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="324dp"
            android:layout_marginTop="44dp"
            android:fontFamily="@font/bungee"
            android:shadowColor="#575757"
            android:text="Daily Schedule"
            android:textColor="#000000"
            android:textSize="34sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="348dp"
            android:layout_marginTop="120dp"
            android:text="TextView"
            android:textColor="#070707"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/p1Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="{x1} Period"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="200dp"
            tools:layout_editor_absoluteY="224dp" />

        <TextView
            android:id="@+id/p2Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="{x2} Period"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="625dp"
            tools:layout_editor_absoluteY="224dp" />

        <TextView
            android:id="@+id/p3Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="{x3} Period"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="200dp"
            tools:layout_editor_absoluteY="381dp" />

        <TextView
            android:id="@+id/p4Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="{x4} Period"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="625dp"
            tools:layout_editor_absoluteY="381dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>